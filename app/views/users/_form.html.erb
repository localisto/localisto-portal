<%= form_for @user do |f| %>
  <%= f.error_messages %>

    <%= f.label :username %>
    <%= f.text_field :username %>
  
    <%= f.label :email, "Email Address" %>
    <%= f.text_field :email %>
  
    <%= f.label :password %>
    <%= f.password_field :password %>
  
    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation %>
  
  <%= f.submit (@user.new_record? ? "Sign up" : "Update") %>
<% end %>
