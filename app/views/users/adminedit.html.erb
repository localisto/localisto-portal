<div class="span6">
  <h1> Edit User: <%=@user.username%> </h1>
<%= form_for(@user, :url => update_profile_path(@user)) do |f| %>


  <%= f.error_messages %>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email, "Email Address" %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
  <lable> User is Active </lable>
    <%= f.check_box :is_active%>
  </p>
  <p>
  <lable> User is Localisto Admin </lable>
    <%= f.check_box :localisto_staff %>
  </p>

  <p><%= f.submit (@user.new_record? ? "Sign up" : "Update") %></p>
  <% end %>

     <div class="alert alert-error deletezone">
      <h2 class="fleft">Delete Zone</h2>
      
      <div class="btn-group fright" style="padding-top: 5px;">
        <a class="btn btn-danger dropdown-toggle" data-toggle="dropdown" href="#">
        Delete
        <span class="caret"></span>
        </a>
    <ul class="dropdown-menu">
     <li><%= link_to 'Permanently Delete', @user, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>
  </div>
<div class="clear"></div>
</div>
</div>



