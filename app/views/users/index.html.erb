<h1>Portal Users (<%= @user.count %>)</h1>

<table class="table">
  <tr>
    
    <td></td>
    <td>Name</td>
    <th>Email</th>
    <th>Agencies</th>
  

    
  </tr>

<% @user.each do |user| %>
  <tr>
        <td width="15px"><%= useractive_check(user) %></td>
        <td><%= link_to user.username, adminedit_path(user)%></td>    
        <td><%= user.email %></td>
        <td>(<%= Portaluserassignment.where(:user_id => user.id).count%>) <%= link_to 'Manage', user_portaluserassignments_path(user) %></td> 

  </tr>
<% end %>
</table>
