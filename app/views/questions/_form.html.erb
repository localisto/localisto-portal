    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
</div>
  
  <div id="qtype2" class="dhide">
 
  </div>

<div id="qtype3" class="dhide">
  <div class="field">
    <%= f.label :aoi_id %>
    <%= f.number_field :aoi_id %>
  </div>
</div>
  
  <div class="actions">
