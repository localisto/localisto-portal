  </div>
<% end %>


<script>
$(document).ready(function() {
      
  loadval = $('#question_qtype :selected').val(); 
    
    if (loadval == 1) {
      $("#qtype2").fadeOut("fast");
      $("#qtype3").fadeOut("fast");
      $("#qtype1").delay(400).fadeIn("slow");
    }
                                 
       if (loadval == 2) {
      $("#qtype1").fadeOut("fast");
      $("#qtype3").fadeOut("fast");
      $("#qtype2").delay(400).fadeIn("slow");
       }
                  
     if (loadval == 3) {
      $("#qtype1").fadeOut("fast");
      $("#qtype2").fadeOut("fast");
      $("#qtype3").delay(400).fadeIn("slow");
     }
      

     $("#question_qtype").change(function() {
        
     choice_val = $("#question_qtype").val();

      if (choice_val == 1) {
      $("#qtype2").fadeOut("fast");
      $("#qtype3").fadeOut("fast");
      $("#qtype1").delay(400).fadeIn("slow");
    }
                                 
       if (choice_val == 2) {
      $("#qtype1").fadeOut("fast");
      $("#qtype3").fadeOut("fast");
      $("#qtype2").delay(400).fadeIn("slow");
       }
                  
     if (choice_val == 3) {
      $("#qtype1").fadeOut("fast");
      $("#qtype2").fadeOut("fast");
      $("#qtype3").delay(400).fadeIn("slow");
     }
       
         });
});
</script>
