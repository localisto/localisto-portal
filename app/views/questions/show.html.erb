
<div class="span6">


<h1>Question</h1>
Question is a <%= qtypera(@question.qtype) %>
<br><br>
<% if @question.qtype.to_i == 1 %>
<p>

  <%= image_tag @question.image %>
</p>
<% end %>

<% if @question.qtype.to_i == 2 %>
<p>
  <b>Description:</b>
  <%= @question.description %>
</p>
<% end %>

<% if @question.qtype.to_i == 3 %>
<p>
  <b>All Our Idea Url</b>
  <%= @question.aoi_id %>
</p>
<% end %>



</div>

<%= link_to 'Permanently Delete', project_question_path(@project, @question), :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>

<div class="span6">
	<h1>Responces</h1>

<% @responces = @question.responces.all %>
<%= render "responces/responcelist" %>
</div>


