<script type="text/javascript" charset="utf-8">

$(function() {
$('#myform').submit(function() {
    $('#loading_image').show(); // show animation
    return true; // allow regular form submission
});
});
</script>
  

  <%= form_for [@agency,@project], :html => { :id => "myform" } do |f| %>
  <% if @project.errors.any? %>
  <div id="error_explanation">
    <h2><% pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

    <ul>
      <% @project.errors.full_messages.each do |msg| %>
      <li><% msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>



<div  id="name" class="row">
  <div class="span6">
<h4> Name your project</h4>
  <div class="field">
    <%= f.text_field :title %>
  </div>
  </div>

<div class="span6">
<p style="margin-top:20px;"> Choose a short name to identify your project on the Localisto Platform</p>
</div>
</div>

<hr>

<div id="mainimage" class="row">
  <div class="span6">
<h4> Main Image</h4>
  
  <%= image_tag @project.image(:thumb), :width => 150 %>
  <div class="field">
     <%= f.file_field :image %>
  </div>
  </div>

<div class="span6">
<p style="margin-top:80px;"> Upload any image to represent your project.  Don't worry about the size or shape, we will help you crop it later! </p>
</div>
</div>

<hr>

<div id="location" class="row">
  <div class="span6">
<h4>Address</h4>
  
  <%= f.text_area  :location, :class=>'projloc', :id=>'countMe' %>
  <div class="theCount">Lines used: <span id="linesUsed">0</span> of 3</div>
  <!-- <div id="map_canvas" style="width: 400px; height: 400px"></div> 
  <%# f.hidden_field :coordinates, :id => :coordinates %> 
  </div> -->

<div class="span6">
<p style="margin-top:40px;"> Enter the address where the event is happening.  </p>
<!--<p style="margin-top:200px;"> Pick exactly where on the map your event is happening. </p>  -->
</div>
</div>

<hr>

<div id="time" class="row">
  <div class="span6">
<h4>Time</h4>
  <div class="field">
 
  <%= f.text_field :meeting_starts, :id => "meetingstarts", :value => (f.object.meeting_starts.strftime('%d-%m-%Y %I:%M %p') if f.object.meeting_starts)  %> 
</div>
<div class="field" style="margin-top:40px;">

 <%= f.text_field :meeting_time %>
</div>
 
 </div>

<div class="span6">


<p style="margin-top:40px;">Enter the exaxt time the event starts.</p>
<p style="margin-top:50px;">This is how the meeting start time will read.  You can enter a more formal time like "Monday, March 28th at 8:00pm" or something less formal like "This Tuesday from 7pm to 9pm"</p>
</div>
</div>
<hr>

<div id="description" class="row">
  <div class="span6">
<h4>Project Description</h4>
 
 <div class="field">
    <%= f.text_area :description, :class=>'projdesc' %>
  </div>
 
 </div>

<div class="span6">
<p style="margin-top:200px;">Enter in the information and details here</p>

</div>


</div>

<hr>



 

  












