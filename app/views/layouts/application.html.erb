<!DOCTYPE html>
<html>
<head>
  <title>Localisto</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.14/jquery-ui.min.js" %>

  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
  <div class="container">
        <a class="brand" href="/">Localisto Admin Portal</a>
        <ul class="nav">

          
          
        </ul>

<ul class="nav pull-right">
                      <% if logged_in? %>
  
   <li > <%= link_to "Edit profile", edit_current_user_path %></li> 
   <li > <%= link_to "Log out", logout_path %></li>
  <% else %>

   <li >  <%= link_to "Sign up", signup_path %></li>
    
   <li > <a href="#myModal" data-toggle="modal">Log In</a></li>
   <% end %> 
                      
    <% if localisto_staff? %>
                      <li class="divider-vertical"></li>
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                         <li><a href="/agencies/">All Agencies</a></li>
                         
                          <li class="divider"></li>
                          <li><a href="/appusers">Manage App Users</a></li>
                         <li><a href="/users">Manage Portal Users</a></li> 
                        </ul>
                      </li>
                      <% end %>
                    </ul>
       
           
          
      
      </div>

    </div>
  </div>

<div id="submenu">
      <div class="container">
    <ul class="nav nav-pills">
    <li class="active">
 
     <% if @subnav.nil? == false %>
        <% @subnav.each do |anchor, url, cssclass, datatog| %>

        <li><%= link_to anchor, url, :class => cssclass, :data => {:toggle => datatog}%></li> 

        <% end %>

        <%else%>
        needs sub nav
        <% end %>
    </ul>
 </div>
</div>

          
  <%= render :partial => "sessions/loginmodal" %>


  <div class="container">
    <div class="row">
      <%= render 'layouts/flash_messages' %>
